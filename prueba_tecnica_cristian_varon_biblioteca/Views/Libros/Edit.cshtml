@model prueba_tecnica_cristian_varon_biblioteca.Models.Libro

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar Libro</h1>

<h4 class="mt-3">Libro</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger mt-3"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Titulo" class="control-label mt-3"></label>
                <input asp-for="Titulo" class="form-control mt-3" />
                <span asp-validation-for="Titulo" class="text-danger mt-3"></span>
            </div>
            <div class="form-group">
                <label asp-for="AutorId" class="control-label mt-3">Nombre del Autor</label>
                <select asp-for="AutorId" class="form-control mt-3" asp-items="ViewBag.AutorId"></select>
                <span asp-validation-for="AutorId" class="text-danger mt-3"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary mt-3" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-primary mt-3" asp-action="Index">Regresar a la Lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
