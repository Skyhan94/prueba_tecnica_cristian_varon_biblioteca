<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - prueba_tecnica_cristian_varon_biblioteca</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/prueba_tecnica_cristian_varon_biblioteca.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>
<body>
<div class="container-fluid">
        <div class="row">
            <nav id="sidebarMenu" class="col-md-3 col-lg-2 d-md-block sidebar">
                <div class="position-sticky pt-3">
                    <a class="navbar-brand-custom" href="/">BIBLIOTECA</a>
                    <ul class="nav flex-column mt-4">
                        <li class="nav-item">                           
                            <a class="nav-link-custom" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house-door me-2"></i> Inicio
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link-custom" asp-controller="Autores" asp-action="Index">
                                <i class="bi bi-person-badge me-2"></i> Autores
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link-custom" asp-controller="Libros" asp-action="Index">
                                <i class="bi bi-book me-2"></i> Libros
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>

            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 main-content">
                <div class="container-fluid pt-4">
                    @RenderBody()
                </div>
                
                <footer class="mt-5 pt-3 border-top text-muted">
                    <p>&copy; 2025 - Biblioteca Codex - Cristian Varon</p>
                </footer>
            </main>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
