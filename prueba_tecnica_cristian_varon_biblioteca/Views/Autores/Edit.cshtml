@model prueba_tecnica_cristian_varon_biblioteca.Models.Autor

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar Autor</h1>

<h4 class="mt-3">Autor</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="AutorId" />
            <div class="form-group">
                <label asp-for="Nombre" class="control-label mt-3"></label>
                <input asp-for="Nombre" class="form-control mt-3" />
                <span asp-validation-for="Nombre" class="text-danger mt-3"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary mt-3" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-primary mt-3 mb-3" asp-action="Index">Regresar a la Lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
