@model prueba_tecnica_cristian_varon_biblioteca.Models.Autor

@{
    ViewData["Title"] = "Create";
}

<h1>Crear Autor</h1>

<h4 class="mt-3">Autor</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nombre" class="control-label mt-3"></label>
                <input asp-for="Nombre" class="form-control mt-3" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="mt-3 btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="mt-3 mb-3 btn btn-primary" asp-action="Index">regresar a la Lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
