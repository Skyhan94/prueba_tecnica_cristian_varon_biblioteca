@model IEnumerable<prueba_tecnica_cristian_varon_biblioteca.Models.Autor>

@{
    ViewData["Title"] = "Autores";
}
<div class="mt-4 mb-4">
    <h1>Autores</h1>
</div>

<div class="d-flex justify-content-end">
    <button type="button" class="btn-premium">
        <a class="text-decoration-none " asp-action="Create">Agregar Nuevo Libro</a>
    </button>
</div>

<div class="table-container-glass">
    <table class="table table-custom">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nombre)
                </th>
                <th class="text-end">Acciones</th>
            </tr>
        </thead>
        <tbody class="table-body rounded-3">
            @foreach (var item in Model)
            {
                <tr class="rounded-3">
                    <td class="fw-bold">
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </td>
                    <td class="text-end">
                        <a asp-action="Edit" class="action-link" asp-route-id="@item.AutorId">Editar</a> |
                        <a asp-action="Details" class="action-link" asp-route-id="@item.AutorId">Detalles</a> |
                        <a asp-action="Delete" class="action-link" asp-route-id="@item.AutorId">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

