@{
    ViewData["Title"] = "Inicio - Biblioteca Codex";
}

<div class="container-fluid py-5">
    <div class="mb-5">
        <h1 class="display-4 fw-bold">Resumen de la Biblioteca</h1>
    </div>

    <div class="row-container g-4 mt-4">
        <div class="col-md-6 col-xl-4">
            <div class="card-stat h-100 p-4">
                <div class="d-flex align-items-center justify-content-between">
                    <div>
                        <p class="text-uppercase mb-1 fw-bold text-brown letter-spacing">Total Libros</p>
                        <h2 class="display-3 fw-bold text-white mb-0">@(ViewBag.TotalLibros ?? 0)</h2>
                    </div>
                    <div class="icon-shape">
                        <i class="bi bi-book-half display-1"></i>
                    </div>
                </div>
                <div class="mt-4 pt-3 border-top border-secondary">
                    <a asp-controller="Libros" asp-action="Index" class="text-decoration-none text-brown hover-link">
                        Ver lista de libros <i class="bi bi-arrow-right ms-2"></i>
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-xl-4">
            <div class="card-stat h-100 p-4">
                <div class="d-flex align-items-center justify-content-between">
                    <div>
                        <p class="text-uppercase mb-1 fw-bold text-brown letter-spacing">Autores</p>
                        <h2 class="display-3 fw-bold text-white mb-0">@(ViewBag.TotalAutores ?? 0)</h2>
                    </div>
                    <div class="icon-shape shadow-brown">
                        <i class="bi bi-person-badge display-1"></i>
                    </div>
                </div>
                <div class="mt-4 pt-3 border-top border-secondary">
                    <a asp-controller="Autores" asp-action="Index" class="text-decoration-none text-brown hover-link">
                        Ver lista de autores <i class="bi bi-arrow-right ms-2"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>